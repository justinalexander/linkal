%p{:style => 'text-align: center;'}
  %a{:href => root_url}
    %img{:src => "#{root_url}images/logo_simple.png"}
%h2{:style => 'text-align: center;'} Your Upcoming Events
%hr
- if @events.count == 0
  %em No upcoming events.
- else
  %table
    - @events.each do |e|
      %tr
        %td
          %a{ :href => event_details_url(e.id)}
            = e.name
          = "#{display_date(e)},"
          %em
            = "#{e.location_name}, #{e.start_at.strftime("%l:%M%P")}"
          %br
          = e.organization_desc
          %br
          %strong Type
          = e.category_name
          %strong Industry
          = e.industry_name
          %strong Attending
          = e.attending
%hr
