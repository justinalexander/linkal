%p
  = link_to 'Back', events_url,
              "data-theme" => :b, "data-role" => :button, "data-mini" => :true, "data-inline" => :true
%p
  %strong
    = @event.name
%p
  %strong
    %em Date
  = display_date(@event)
%p
  %strong
    %em Start
  = @event.start_at.to_s(:time)
  %strong
    %em End
  = @event.end_at.to_s(:time) if @event.end_at.present?
%p
  %strong
    %em Type
  = @event.category_name
  %strong
    %em Cost
  = @event.cost.zero? ? 'Free' : number_to_currency(@event.cost)
%p
  %strong
    %em Attending
  = @event.attending
%p
  = twitter_link_tag(@event)
  = share_by_email_tag(@event)
  = link_to image_tag('share.cal.png'), event_url(@event, :format => 'ics' ), :target => :blank
  %br
  = facebook_like

%h3 Let Us Know!
%p Do you plan on attending this event?
%p#attending-message{:class => 'grey-box', :class => :hide}
  %em Thanks! We hope to see you there.

%p
  = link_to 'Absolutely! Count me in.', '#', "data-role" => :button,
      "data-mini" => :true, "data-inline" => :true, "data-rel" => :dialog, :id => 'attending-yes'
  = link_to 'I might! I have to take a look at my calendar.', '#', "data-role" => :button,
      "data-mini" => :true, "data-inline" => :true, "data-rel" => :dialog, :id => 'attending-maybe'

%h3 Description
%p
  = @event.description
%h4
  = @location.name
= @location.address_1
- if @location.address_2.present?
  %br/
  = @location.address_2
%br/
#{@location.city}, #{@location.state} #{@location.zip}
%h4 Phone
%p= number_to_phone(@event.phone_number)

:javascript
  var yes_attendance_url = "#{create_attendance_event_url(@event, :attending => 'yes')}";
  var maybe_attendance_url = "#{create_attendance_event_url(@event, :attending => 'maybe')}";
