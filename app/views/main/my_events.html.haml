- content_for :view_buttons do
  %p
    = link_to "List", my_events_url, "data-role" => :button,
      "data-inline" => "true", "data-mini" => "true"
    = link_to "Calendar", my_events_calendar_url, "data-role" => :button,
      "data-inline" => "true", "data-mini" => "true"
%div{:style => "text-align:center"}
  %h2 My Events

  - if @events.count == 0
    %em No upcoming events.
  - else
    %ul{"data-role" => :listview, "data-theme" => :g}
      - @events.each do |e|
        %li
          %a{ :href => event_details_url}
            %p
              = "#{e.start_at.strftime("%A %B #{e.start_at.day.ordinalize}")}"
            %p
              %strong
                = e.name
            %p
              %strong
                = "#{e.attending} attending"
              %em
                = "#{e.location_name}, #{e.start_at.strftime("%l:%M%P")}"
